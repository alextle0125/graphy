<div class="container">
  <h1>Sign In</h1>

  <% if @error %>
    <div class="errors"><%= @error %></div>
  <% end %>

  <form class="pure-form pure-form-aligned" id="sign-in" method="post" action="/sessions">
    <fieldset>
      <div class="pure-control-group">
        <label class="label" for="email">Email</label>
        <input type="email" name="email" placeholder="e.g., me@example.com" value="<%= @email %>">
      </div>

      <div class="pure-control-group">
        <label class="label" for="password">Password</label>
        <input type="password" name="password" placeholder="6 or more characters">
      </div>

      <div class="pure-controls">
        <input type="submit" value="Sign In" class="pure-button pure-button-primary">
      </div>
    </fieldset>
  </form>
</div>
