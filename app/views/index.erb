<div id="search">

  <% if current_user %>
      <h1>Hello <%=get_user_name%>, what would you like to Graphy? </h1>
    <% else %>
      <h1>Choose something to graphy...</h1>
  <% end %>

  <form class="pure-form" name="graphy" id="graphy" action="result/show" method="post">
    <input type="text" name="criteria" placeholder="Food Name" required>
    <input type = "submit" value="Submit"  class="pure-button pure-button-primary">
  </form>

</div>

<div class="container">

  <div style="width:600px">

    <div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>

  </div>

  <div class="metadata" style="width:600px">
  <% if current_user %>

    <form class="pure-form" name='project' id='project' action='/users/<%= current_user.id %>/projects/new' method='post'>
      <input type='text' name='project[title]' placeholder='Title' required><br>
      <input type="hidden" name="project[user_id]" value="<%= current_user.id %>">
      <textarea name='project[note_content]' placeholder='Write some important notes' rows='7' cols='50'></textarea><br>
      <input type='submit'  class="pure-button pure-button-primary" value='Save Project'>
    </form>


    <p class="references" style="color: #999">References:</p>
    <form class="pure-form" name='references' id='references' action='/users/<%= current_user.id %>/projects/<% next_project_id %>/links' method='post'>
      <input type='url' name='link' placeholder='Tack on important links' required>
      <input  class="pure-button" type='submit' value='URL'>
    </form>
  <% else %>
    <p>Log in to save your results</p>
  <% end %>
  </div>

</div>
